#!/bin/sh
# Automated gamesman solver
# John Jordan


if test "$1" = "all"
then
	options="-solve all"
else
	options="-solve"
fi

CWD=irname $0MODULES=s -1 $CWD/m* 2>/dev/null
if test "$MODULES" = ""
then
	echo "Build gamesman first!"
	exit 1
fi

for i in $MODULES
do
	$i $options
done

echo "Finished solving.. Thanks for your patience!"
