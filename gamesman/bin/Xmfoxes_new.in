### Remember where our executable is.

global kRootDir
if { $tcl_platform(platform) == "unix" } {
    set kRootDir [file dirname [info script]]
} else {
    set kRootDir "."
}

### Load the Gamesman solver

load "$kRootDir/../lib/libmfoxes_new[info sharedlibextension]" Gamesman

### Now source our Game-specific code.

source "$kRootDir/../tcl/mfoxes.tcl"

### This is specific to Foxes and Geese; we allow the user to edit the initial position

source "$kRootDir/../tcl/mfoxessubs.tcl"

### Now source the rest of the game-playing interface code.

source "$kRootDir/../tcl/gamesmanfoxes.tcl"
